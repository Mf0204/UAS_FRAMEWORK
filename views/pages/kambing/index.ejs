<html lang="en">
<head>
    <title>kambing</title>
    <link rel="stylesheet" href="/asset/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include ('../components/navbar') %>
    <p></p>
    <a href="kambing/create">Tambah kambing</a>
    <h3>Daftar kambing ( <%= kambing.length %>)</h3>
 <div class="row">
     <form action="/project" >
        <div class="input-group">
            <div class="form-outline">
                <input type="text" id="form2" name="keyword" class="form-control"/>

            </div>
            <button class="btn btn-warning" type="submit"> search</button>
        </div>
     </form>

 </div>
    <ul>
        <% if (kambing.length>0) {%>
        <% kambing.forEach (function(kambing){ %>
            <!-- baru -->
            <section class="py-2">
                <div class="container px-4 px-lg-5 mt-5">
                    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                        <div class="col mb-5">
                            <div class="card h-100">
                                <img class="card-img-top"
                                    src="data:image/<%=kambing.img.contentType%>;base64,<%=kambing.img.data.toString('base64')%>">
                             
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder"><%= kambing.nama %></h5>
                                        <!-- Product price-->
                                        
                                        <%= kambing.harga %>
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/kambing/<%= kambing._id %>">View Details</a>
                                </div>
                                <br>
                                <div class="text-center"> <a class="btn btn-success"
                                    href="/kambing/update/<%= kambing._id %>/<%= kambing.id %>/<%= kambing.nama %>/<%= kambing.harga %>/<%= kambing.keterangan %>/<%= kambing.password %>">Update</a>
                                <a class="btn btn-danger" href="/kambing/hapus/<%= kambing._id %>">Hapus</a></div></div>
                            </div>
                        </div>            
                    </div>
                </div>
            </section>

        <% }); %>
        <% } else { %>
        <p>Data Kambing masih kosong</p>
        <% } %>
    </ul>

    <%- include ('../components/footer') %>

</body>
</html>